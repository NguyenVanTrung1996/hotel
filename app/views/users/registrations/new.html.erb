<% provide :title, t("signup") %>
<h1><%= t "signup" %></h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :name, t("users.name") %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name",
      class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :email, t("users.email") %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, t("users.password") %>
    <% if @minimum_password_length %>
    <em>(<%= t("users.min_pass", min: @minimum_password_length) %>)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, t("users.pass_confirm")  %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit t("signup"), class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
